<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scaleSignal">

    <Spinner
        android:id="@+id/spScaleType"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPhysicalValueRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/physical_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spScaleType" />

    <TextView
        android:id="@+id/tvPhysicalValueStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/start"
        app:layout_constraintEnd_toEndOf="@+id/etPhysicalValueStart"
        app:layout_constraintStart_toStartOf="@+id/etPhysicalValueStart"
        app:layout_constraintTop_toBottomOf="@+id/tvPhysicalValueRange" />

    <TextView
        android:id="@+id/tvPhysicalValueEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/end"
        app:layout_constraintEnd_toEndOf="@+id/etPhysicalValueEnd"
        app:layout_constraintStart_toStartOf="@+id/etPhysicalValueEnd"
        app:layout_constraintTop_toBottomOf="@+id/tvPhysicalValueRange" />

    <EditText
        android:id="@+id/etPhysicalValueStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number|numberDecimal|numberSigned"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPhysicalValueStart"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.4"
        android:gravity="center"/>

    <EditText
        android:id="@+id/etPhysicalValueEnd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="number|numberDecimal|numberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPhysicalValueEnd"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.4"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvPhysicalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/physical_value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPhysicalValueEnd" />

    <EditText
        android:id="@+id/etPhysicalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number|numberDecimal|numberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPhysicalValue"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvUnifiedSignal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/unified_signal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPhysicalValue" />

    <EditText
        android:id="@+id/etUnifiedSignal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUnifiedSignal"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvUnifiedSignalRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/unified_signal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUnifiedSignal" />

    <TextView
        android:id="@+id/tvUnifiedSignalStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/start"
        app:layout_constraintEnd_toEndOf="@+id/etUnifiedSignalStart"
        app:layout_constraintStart_toStartOf="@+id/etUnifiedSignalStart"
        app:layout_constraintTop_toBottomOf="@+id/tvUnifiedSignalRange" />

    <TextView
        android:id="@+id/tvUnifiedSignalEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/end"
        app:layout_constraintEnd_toEndOf="@+id/etUnifiedSignalEnd"
        app:layout_constraintStart_toStartOf="@+id/etUnifiedSignalEnd"
        app:layout_constraintTop_toBottomOf="@+id/tvUnifiedSignalRange" />

    <EditText
        android:id="@+id/etUnifiedSignalStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUnifiedSignalStart"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.4"
        android:gravity="center"/>

    <EditText
        android:id="@+id/etUnifiedSignalEnd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="number|numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUnifiedSignalEnd"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.4"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>